;; Add .emacs.d to the load path
(add-to-list 'load-path "~/.emacs.d")

;; Add local lisp folder to load-path
;; (setq load-path (append load-path (list "~/.emacs_addons")))

;; Set up matlab-mode to load on .m files
(autoload 'matlab-mode "matlab" "Enter MATLAB mode." t)
(setq auto-mode-alist (cons '("\\.m\\'" . matlab-mode) auto-mode-alist))
(autoload 'matlab-shell "matlab" "Interactive MATLAB mode." t)

;;to set the coursor to red
(set-cursor-color "red")
;;to set background color to black
(set-background-color "black")
;;to set foreground color to white
(set-foreground-color "white")


(custom-set-variables
  ;; custom-set-variables was added by Custom.
  ;; If you edit it by hand, you could mess it up, so be careful.
  ;; Your init file should contain only one such instance.
  ;; If there is more than one, they won't work right.
 '(inhibit-startup-screen t)
 '(inverse-video t)
 '(safe-local-variable-values (quote ((py-indent-offset . 4)))))
(custom-set-faces
  ;; custom-set-faces was added by Custom.
  ;; If you edit it by hand, you could mess it up, so be careful.
  ;; Your init file should contain only one such instance.
  ;; If there is more than one, they won't work right.
